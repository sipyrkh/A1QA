import org.testng.Assert;
import org.testng.annotations.*;


public class TestFile {

    private static File myFile;
    private static String filename;
    private static String content;

    @BeforeTest
    public void initializeObject(){
        String filename = "TheFirstFile.txt";
        String content = "The first file content";
        myFile = new File(filename, content);
    }

    @DataProvider(name = "dpForGetExtension")
    public static Object[][] testDataForGetExtension(){
        return new Object[][]{
                {"TheFirstFile.txt", "txt"},
                {"TheSecondFile.doc", "doc"},
                {"TheThirdFile.exe", "exe"}};
    }

    @Test (dataProvider = "dpForGetExtension")
    public void testGetExtension(String filename, String expectedExtension){
        Assert.assertEquals(myFile.getExtension(), expectedExtension);
    }

    @Test
    public void testGetSize(){
        int expectedSize = 10;
        Assert.assertEquals(myFile.getSize(), expectedSize);
    }

    @Test
    public void testGetContent(){
        Assert.assertEquals(myFile.getContent(), content);
    }

    @Test
    public void testGetFilename(){
        String expectedFilename = "ExampleFile.txt";
        Assert.assertEquals(myFile.getFilename(), expectedFilename);
    }


}
